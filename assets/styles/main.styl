@import 'external/reset'
@import 'external/960/grid'
@import 'nib'

var_grid_columns = 12
var_grid_gutter = 20px
var_grid_width = 960px
var_grid_debug = false
var_font_size = (14px/1.4)
var_bg = #1e4164

box-shadow(args...)
   -webkit-box-shadow args
   -moz-box-shadow args
   box-shadow args

body
  font 14px/1.4 Calibri, Helvetica, Arial, sans-serif
  color #1e4164
  background #efe9e5 url("http://noisepng.com/100-90-5.png")

.container
  background #FFF
  box-shadow(0 1px 5px rgba(0,0,0,0.35))
  padding 0 0 1.5em 0
  margin 0 auto 1em auto

.header
  background var_bg
  dark = var_bg - 25%
  background linear-gradient(8px top, var_bg, dark) 
  color #fff
  box-shadow(0 1px 5px rgba(0,0,0,0.35))
  border-bottom solid 8px #8dc63f

h1
  font-size 2em

h2
  font-size 1.6em

h3
  font-size 1.2em
  background #efe9e5

var_card_width = 60px
var_card_height = var_card_width * 1.5

.card
  bold-button(#1e4164)
  width var_card_width
  height var_card_height
  text-align center
  float left
  border 1px black solid
  line-height var_card_height
  margin .5em .5em 0 .5em
  //margin-right 1em
  //margin-top 1em
  font-size 3em
  text-decoration none
  clearfix()

.reset
  clearfix()

.result
  width var_card_width*2
  float left
  clearfix()
  .name
    display block
    text-align center
@import 'mobile'